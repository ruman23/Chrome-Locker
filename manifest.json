{
	"manifest_version" : 2,
	"name": "locker",
	"version": "1.0.0",
	"description": "Lock your chrome.",
	"icons":{
		"128": "logo128.png",
		"48": "logo48.png",
		"16": "logo16.png"
	},
	"browser_action":{
		"default_icon":"logo16.png",
		"default_popup":"popup.html"
	},

	"permissions":["tabs",   "storage"],

	"background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}